<style>
    header {
        padding-bottom: 8px;
        background-color: white;
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    }
    .topofheader {
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo {
        width: 340px;
    }
    ul {
        list-style: none;
        margin: 0;
        padding: 10px 0;
        display: flex;
        gap: 43px;
        justify-content: center;
    }
    a {
        font-family: 'Oxygen', sans-serif;
        font-size: 18px;
        color: #434343;
        text-transform: uppercase;
        letter-spacing: 0.40px;
        text-decoration: none;
        padding: 8px;       
        position: relative;
    }
    .hover:hover {
        color: white;
        background-color: rgb(0, 119, 192);
        border-radius: 15px;
    }
    .telephone {
        display: flex;
        align-items: center;
    }
    .telephone > svg {
        height: 32px;
        color: rgb(0, 119, 192);
    }
    .companysite, .companysite > * {
        font-size: 16px;
    } 
    .companysite {
        font-size: 16px;
        cursor: default;
    } 
    .business {
        color: darkgray;
        cursor: default;
    }
</style>